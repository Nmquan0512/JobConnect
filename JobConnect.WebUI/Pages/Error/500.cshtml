@page "/500"
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>500 - Lỗi hệ thống</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8d7da;
        }
        .error-container {
            text-align: center;
            padding: 100px 20px;
        }
        .error-code {
            font-size: 10rem;
            font-weight: 700;
            color: #721c24;
        }
        .error-message {
            font-size: 1.5rem;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container error-container">
        <div class="error-code">500</div>
        <div class="error-message">Xin lỗi, đã xảy ra lỗi hệ thống. Vui lòng thử lại sau.</div>
        <a href="/" class="btn btn-danger btn-lg">Trở về trang chủ</a>
    </div>
</body>
</html>
