@page "/403"
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>403 - Không có quyền truy cập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #fff3cd;
        }

        .error-container {
            text-align: center;
            padding: 100px 20px;
        }

        .error-code {
            font-size: 10rem;
            font-weight: 700;
            color: #856404;
        }

        .error-message {
            font-size: 1.5rem;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container error-container">
        <div class="error-code">403</div>
        <div class="error-message">Bạn không có quyền truy cập trang này.</div>
        <a href="/" class="btn btn-warning btn-lg">Quay lại trang chủ</a>
    </div>
</body>
</html>
